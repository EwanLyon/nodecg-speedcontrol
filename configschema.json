{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "twitch": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "clientID": {
          "type": "string",
          "default": ""
        },
        "clientSecret": {
          "type": "string",
          "default": ""
        },
        "redirectURI": {
          "type": "string",
          "default": "http://localhost:9090/nodecg-speedcontrol/twitchauth"
        },
        "channelName": {
          "type": "string"
        },
        "streamTitle": {
          "type": "string",
          "default": "Game: {{game}} - Category: {{category}} - Players: {{players}}"
        },
        "streamDefaultGame": {
          "type": "string",
          "default": "Games + Demos"
        },
        "ffzIntegration": {
          "type": "boolean",
          "default": false
        },
        "ffzBlacklist": {
          "type": [
            "array",
            "null"
          ],
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "enabled",
        "clientID",
        "clientSecret",
        "redirectURI",
        "streamTitle",
        "streamDefaultGame"
      ]
    },
    "schedule": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "defaultURL": {
          "type": "string",
          "default": "https://horaro.org/zoton2testevent/speedcontrol.json?named=true&key=zoton2test"
        },
        "ignoreGamesWhileImporting": {
          "type": [
            "array",
            "null"
          ],
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "disableSpeedrunComLookup": {
          "type": "boolean",
          "default": false
        },
        "customData": {
          "type": [
            "array",
            "null"
          ],
          "uniqueItems": true,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "key": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "key"
            ]
          }
        }
      },
      "required": [
        "defaultURL",
        "disableSpeedrunComLookup"
      ]
    }
  },
  "required": [
    "twitch",
    "schedule"
  ]
}