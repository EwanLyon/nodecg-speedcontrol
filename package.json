{
  "name": "nodecg-speedcontrol",
  "version": "2.0.0",
  "description": "NodeCG bundle to help facilitate the running of speedrunning marathons, including overlays.",
  "homepage": "https://github.com/speedcontrol/nodecg-speedcontrol#readme",
  "bugs": {
    "url": "https://github.com/speedcontrol/nodecg-speedcontrol/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/speedcontrol/nodecg-speedcontrol.git"
  },
  "license": "MIT",
  "author": "zoton2",
  "scripts": {
    "build": "run-s build:*",
    "build:browser": "trash .cache && cross-env NODE_ENV=production npm run bundle",
    "build:extension": "trash extension && npx tsc -b tsconfig.extension.json",
    "bundle": "trash dashboard && node script/bundle.js",
    "start": "node ../..",
    "watch": "run-p watch:*",
    "watch:browser": "npm run bundle",
    "watch:extension": "trash extension && npx tsc -b tsconfig.extension.json -w",
    "autofix": "run-s autofix:*",
    "autofix:browser": "npx eslint --fix --ext .ts,.vue,.html src/dashboard",
    "autofix:extension": "npx eslint --fix --ext .ts src/extension",
    "typeschemas": "node script/typeschemas.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "@vue/component-compiler-utils": "^3.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-vue": "^5.2.3",
    "json-schema-to-typescript": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "trash-cli": "^3.0.0",
    "typescript": "^3.5.3",
    "vue": "^2.6.10",
    "vue-hot-reload-api": "^2.3.3",
    "vue-template-compiler": "^2.6.10"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.esm.js"
  },
  "nodecg": {
    "compatibleRange": "^1.0.0",
    "dashboardPanels": [
      {
        "name": "example",
        "title": "Example",
        "file": "example.html"
      }
    ]
  },
  "vue": {
    "runtimeCompiler": true
  }
}
